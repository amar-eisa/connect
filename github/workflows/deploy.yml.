name: Deploy to VPS

on:
  push:
    branches:
      - main  # أو اسم الفرع الذي تريد الرفع منه

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      # 1. تسجيل الدخول إلى Docker Hub
      - name: Login to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}

      # 2. بناء الصورة ورفعها
      - name: Build and push Docker image
        uses: docker/build-push-action@v5
        with:
          context: .
          push: true
          tags: ${{ secrets.DOCKER_USERNAME }}/my-connect-app:latest
          # إذا كان لديك متغيرات بيئة مثل Supabase URL تحتاجها أثناء الـ Build
          # build-args: |
          #   VITE_SUPABASE_URL=${{ secrets.VITE_SUPABASE_URL }}

      # 3. الدخول للسيرفر وتنفيذ التحديث
      - name: Deploy to VPS
        uses: appleboy/ssh-action@master
        with:
          host: ${{ secrets.VPS_HOST }}
          username: ${{ secrets.VPS_USER }}
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          script: |
            # سحب الصورة الجديدة
            docker pull ${{ secrets.DOCKER_USERNAME }}/my-connect-app:latest
            
            # إيقاف وحذف الحاوية القديمة (إن وجدت)
            docker stop connect-app || true
            docker rm connect-app || true
            
            # تشغيل الحاوية الجديدة على المنفذ 8002 لتجنب التضارب
            docker run -d \
              --name connect-app \
              --restart unless-stopped \
              -p 8002:80 \
              ${{ secrets.DOCKER_USERNAME }}/my-connect-app:latest